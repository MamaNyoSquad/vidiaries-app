<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Splash Screen Theme. -->
    <style name="Theme.VIDiariesSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/vidiaries</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/vidiaries_splash</item>
        <item name="windowSplashScreenAnimationDuration">4500</item>
        <item name="postSplashScreenTheme">@style/Theme.VenusIslandDiaries</item>

        <!-- Status bar and Nav bar configs -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/vidiaries</item>
        <item name="android:navigationBarColor">@color/vidiaries</item>
    </style>
</resources>