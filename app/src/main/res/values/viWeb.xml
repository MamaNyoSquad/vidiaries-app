<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.viWeb" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/vidiaries</item>
        <item name="colorPrimaryVariant">@color/vidiaries</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/vidiaries</item>
        <item name="colorSecondaryVariant">@color/vidiaries</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status and navigation bar color -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- Other options -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>