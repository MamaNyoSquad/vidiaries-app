<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vidiaries">

    <ImageView
        android:id="@+id/vidiaries_icon"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/vidiaries_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white"
        android:contentDescription="@string/vidiaries_icon" />

    <ImageView
        android:id="@+id/vidiaries_logo"
        android:layout_width="190dp"
        android:layout_height="47.5dp"
        android:layout_marginTop="95dp"
        android:contentDescription="@string/vidiaries_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vidiaries_icon"
        app:srcCompat="@drawable/vidiaries_logo"
        app:tint="@color/white" />
</androidx.constraintlayout.widget.ConstraintLayout>