            <Space
                android:layout_width="match_parent"
                android:layout_height="95dp" />

            <TextView
                android:id="@+id/copyright"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/eb_garamond"
                android:text="@string/copyright"
                android:textAlignment="center"
                android:textColor="@color/vidiaries"
                android:textSize="14.25sp" />

            <TextView
                android:id="@+id/license"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/eb_garamond"
                android:text="@string/license"
                android:textAlignment="center"
                android:textColor="@color/vidiaries"
                android:textSize="14.25sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="47.5dp" />

            <Button
                android:id="@+id/btnMITLicense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/MITred"
                android:elevation="4.75dp"
                android:paddingLeft="19dp"
                android:paddingTop="9.5dp"
                android:paddingRight="19dp"
                android:paddingBottom="9.5dp"
                android:text="@string/mitLicense"
                android:textColor="@color/white"
                android:textSize="14.25sp"
                android:textStyle="bold"
                app:icon="@drawable/mit"
                app:iconTint="@color/white" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="95dp" />

        </LinearLayout>
