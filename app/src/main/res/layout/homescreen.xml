                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/insideStory2"
                        android:scaleType="fitXY"
                        card_view:srcCompat="@drawable/insidestory2" />

                    <TextView
                        android:id="@+id/insideStory2_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/eb_garamond"
                        android:paddingLeft="19dp"
                        android:paddingTop="19dp"
                        android:paddingRight="19dp"
                        android:paddingBottom="9.5dp"
                        android:text="@string/insideStory2_title"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:textSize="28.5sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/insideStory2_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/eb_garamond"
                        android:paddingLeft="19dp"
                        android:paddingRight="19dp"
                        android:paddingBottom="9.5dp"
                        android:text="@string/insideStory2_desc"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:textSize="14.25sp" />

                    <Button
                        android:id="@+id/btnInsideStory2"
                        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="9.5dp"
                        android:layout_marginBottom="9.5dp"
                        android:fontFamily="@font/eb_garamond"
                        android:gravity="center"
                        android:text="@string/btnRead"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="14.25sp"
                        android:textStyle="bold"
                        card_view:icon="@drawable/book"
                        card_view:iconTint="@color/white" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="47.5dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/insideStory3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@color/vidiaries"
